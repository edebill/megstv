<h2><%= child.display_name %></h2>
<table>
<% child.minutes.each do |minute| %>
<tr><td><%= minute.amount %></td><td><%= minute.user.display_name %></td><td><%= minute.description %></td></tr>
<% end %>
<tr class="total_row"><td><%= child.current_minutes %></td><td></td><td>total</td></tr>
</table>
<%  minute = Minute.new(:child_id => child.id,
                        :user_id => current_user.id)
 %>
<%= render :partial => 'form', :locals => { :minute => minute } %>
